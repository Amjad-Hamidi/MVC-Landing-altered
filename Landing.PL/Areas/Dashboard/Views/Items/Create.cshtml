@model ItemFormVM

@section Header {
	Items
}


<div class="col-md-12">
	<div class="card card-primary">
		<div class="card-header">
			<h3 class="card-title">Create</h3>
		</div>

		@* by default : enctype ="application/x-www-form-urlencoded"  => هاد ما بقبل الملفات*@
		<form asp-controller="Items" asp-action="Create">
			<div class="card-body">

				<div class="form-group">
					<label asp-for="Name"></label>
					<input asp-for="Name" class="form-control" placeholder="Enter Service Name">
				</div>

				<div class="form-group">
					<label asp-for="Description"></label>
					<input asp-for="Description" class="form-control" placeholder="Enter Service Description">
				</div>

				<div class="form-group">
					<label asp-for="PortfoiloId">Select Portfoilo</label>
					<select asp-for="PortfoiloId" class="form-control" asp-items="Model.Portfoilos">

					</select>
					<!-- OR : when i use IEnumerable
					<select asp-for="PortfoiloId" class="form-control" asp-items="@(new SelectList(Model.Portfoilos, "Id" , "Name"))">

					</select>
					-->
				</div>
			</div>

			<div class="card-footer">
				<button type="submit" class="btn btn-primary" fdprocessedid="pvthkg">Create</button>
			</div>
		</form>
	</div>
</div>